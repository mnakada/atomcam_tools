#!/bin/sh
#
# Start webhook for atomcam
#

case "$1" in
  start)
    /scripts/webhook.sh &
    /scripts/webcmd.sh &
    /scripts/cruise.sh &
    /scripts/healthcheck.sh &
  ;;
  stop)
    kill `pidof webhook.sh`
    kill `pidof webcmd.sh`
    kill `pidof cruise.sh`
    kill `pidof healthcheck.sh`
  ;;
  restart|reload)
    $0 stop
    $0 start
  ;;
  *)
    echo "Usage: $0 {start|stop|restart}"
    exit 1
esac

exit $?
